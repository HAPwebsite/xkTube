// Colors

$mainColor = #80B740
$secondaryColor = #343434
$accentColor = #DE0024
$lightColor = #eaeaea

@import url('https://fonts.googleapis.com/css?family=Asar');

a
	:visited
		color $mainColor !important

body
	background $lightColor

.xkNav
	nav
		background white !important
		height 80px !important
		line-height 80px !important
		box-shadow none !important
		z-index 9999
	.brand-logo
		background $mainColor
		padding 0 15px
		height 80px
		width 80px
		i
			font-size 100%
			line-height 80px
			padding-left 8px
	ul
		a
			color $secondaryColor !important
			&:hover
				background transparent !important
	.left
		margin-left 100px
		.icon-prefix
			color $secondaryColor !important
		.prefix
			line-height 80px !important
			color $secondaryColor
			.active
				color $mainColor !important
	.right
		.userPic
			line-height 80px
			img
				width 50px
				height 50px
				border-radius 50%
				margin-top 15px
				border 2px solid transparent
				transition all .2666s
				&:hover
					border 2px solid $mainColor

.staticMenu
	position fixed
	width 25%
	height 100vh
	background $secondaryColor
	max-height auto
	top 0
	z-index -2

.bodyContent
	margin-left 25%
	width 75%
	background $lightColor
	height auto
	min-height 100vh
	position absolute
	top 80px
	.videoHere
		width 80%
		display block
		margin auto
		iframe
			display block
			margin auto
			width 100%
			min-height 432px
			height auto
			box-shadow 0 100px 120px -40px rgba(0,0,0,.3)
		.videoTitle
			h1
				font-family 'Asar', serif
				font-size 36px
				color $secondaryColor
				text-align center
				padding-top 80px
		.viewsXK
			line-height 40px
			color $secondaryColor
			text-align center
			.x6x
				position relative
			i
				position absolute
				left -30px
				top 6px
				opacity .5
			span
				color $secondaryColor
				b
					color $mainColor
			.leViews
				text-align right
				margin-left 20px
			.leTime
				margin-left 30px
				text-align left
		.description
			opacity .5
			transition all .8s
			&:hover
				opacity 1
.leftFixedMenu
	ul
		a
			color $lightColor !important
			line-height 30px
			position relative
			&:hover
				i
					opacity 1
					color $mainColor
					transform scale(1.2)
		i
			position absolute
			opacity .5
			transition all .3s
			&:hover
				opacity 1
		span
			margin-left 35px
	.collapsible-header
		background-color transparent !important
		border none !important
		box-shadow none !important
		color $lightColor
		text-transform uppercase
		font-family "Roboto", sans-serif
		font-size 12px
	.collapsible,.collapsible-body
		border none
		box-shadow none
	.collapsible-body
		padding: .5rem 2rem;